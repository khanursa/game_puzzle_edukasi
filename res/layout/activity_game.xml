<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgr_iii"
    tools:context=".GameActivity" >



    <RelativeLayout
        android:id="@+id/Layout1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

    </RelativeLayout>

    <Button
        android:id="@+id/btnAcak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Layout1"
        android:layout_below="@+id/Layout1"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/acak_selector" />

    <Button
        android:id="@+id/button_Solved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnAcak"
        android:layout_alignBottom="@+id/btnAcak"
        android:layout_alignRight="@+id/Layout1"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/solved_selector" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/Layout1"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:maxHeight="110dp"
        android:maxWidth="110dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>