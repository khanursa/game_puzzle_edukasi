<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.game"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="18" />
    
	<supports-screens android:largeScreens="true" android:anyDensity="true" android:normalScreens="true" android:smallScreens="true" android:xlargeScreens="true"/>
	<uses-permission android:name="android.permission.VIBRATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.game.Splashscreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.example.game.InputUserActivity"
            android:label="@string/app_name" >
        </activity>
        <activity 
            android:name="com.example.game.HalMainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity 
            android:name="com.example.game.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity 
            android:name="com.example.game.GridActivity"
            android:label="@string/app_name" >
        </activity>
        <activity 
            android:name="com.example.game.GameActivity"        
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
        </activity>
                <activity 
            android:name="com.example.game.AboutActivity"
            android:label="@string/app_name" >
        </activity>
        <activity 
            android:name="com.example.game.HalEdukasiActivity"
            android:label="@string/app_name" >
        </activity>
        
        
        <activity 
            android:name="com.example.game.HalSkorActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
